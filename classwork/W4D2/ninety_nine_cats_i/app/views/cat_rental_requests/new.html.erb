<h1>Make a Rental Request</h1>

<form class="" action="<%= cat_rental_requests_url %>" method="post">
  <label for="cat">Cat</label>
  <select class="" name="cat_rental_requests[cat_id]">
    <option value="" selected disabled>-- Select a cat --</option>
    <% Cat.all.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>

  <label>Start Date
  <input type="date" name="cat_rental_requests[start_date]" value="">
  </label>
  
  <label>End Date
  <input type="date" name="cat_rental_requests[end_date]" value="">
  </label>

  <input type="submit" value="Submit">
</form>

<h1><%= @cat.name %>'s Page</h1>

  <table>

    <tr>
      <th>Atttribute</th>
      <th>Values</th>
    </tr>

    <tr>
      <td>Age</td>
      <td><%= @cat.age %></td>
    </tr>
    <tr>
      <td>Birthday</td>
      <td><%= @cat.birth_date %></td>
    </tr>
    <tr>
      <td>Color</td>
      <td><%= @cat.color %></td>
    </tr>
    <tr>
      <td>Sex</td>
      <td><%= @cat.sex %></td>
    </tr>
    <tr>
      <td>Description</td>
      <td><%= @cat.description %></td>
    </tr>

    <!-- <%# [:age, :birth_date, :color, :sex].each do |attr_name| %>
      <tr>
        <td><%#= attr_name %></td>
        <td><%#= @cat.send(attr_name) %></td>
      </tr>
    <%# end %> -->
  </table>

  <table>
    <tr>
      <th>User</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Status</th>
    </tr>

    <% @cat.rental_requests.order(:start_date).each do |request| %>
      <tr>
        <td>No User</td>
        <td><%= request.start_date %></td>
        <td><%= request.end_date %></td>
        <td>
          <% if request.pending? %>
            <%= button_to "Approve", approve_cat_rental_request_url(request) %>
            <%= button_to "Deny", deny_cat_rental_request_url(request) %>
          <% else %>
            <%= request.status %>
          <% end %>
        </td>
      </tr>
    <% end %>

  </table>

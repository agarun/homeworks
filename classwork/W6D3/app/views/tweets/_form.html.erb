<h2>New Tweet!</h2>
<form data-tweets-ul="#feed" class="tweet-compose" action="/tweets" method="POST">
  <script>
    window.users = '<%= render("/users/user", users: User.all) %>'
  </script>
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <label>
    Content
    <textarea name="tweet[content]"></textarea>
  </label>
  <br>

  <label>
    Mention
    <select name="tweet[mentioned_user_ids][]">
      <option></option>
      <% User.all.each do |user| %>
        <option value="<%= user.id %>"><%= user.username %></option>
      <% end %>
    </select>
  </label>
  <br>

  <input type="submit" value="Post Tweet!">
</form>
